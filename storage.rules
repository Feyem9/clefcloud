rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les partitions
    match /partitions/{userId}/{fileName} {
      // Permettre la lecture seulement si l'utilisateur est authentifié
      // et que c'est son propre dossier
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permettre l'écriture (upload) seulement si l'utilisateur est authentifié
      // et que c'est son propre dossier
      // Limiter la taille du fichier à 10MB
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('application/pdf|image/.*');
      
      // Permettre la suppression seulement si c'est le propriétaire
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
