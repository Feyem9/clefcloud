rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection partitions
    match /partitions/{partitionId} {
      // Permettre la lecture seulement si l'utilisateur est le créateur
      allow read: if request.auth != null && resource.data.createdBy == request.auth.uid;
      
      // Permettre la création seulement si l'utilisateur est authentifié
      // et que le champ createdBy correspond à l'utilisateur
      allow create: if request.auth != null 
                    && request.resource.data.createdBy == request.auth.uid;
      
      // Permettre la mise à jour seulement si l'utilisateur est le créateur
      allow update: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid;
      
      // Permettre la suppression seulement si l'utilisateur est le créateur
      allow delete: if request.auth != null 
                    && resource.data.createdBy == request.auth.uid;
    }
    
    // Règles pour la collection users (optionnel)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
